<h1>Listing trains</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>From</th>
    <th>To</th>
    <th>Departure</th>
    <th>Arrival</th>
    <th>Carrier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trains.each do |train| %>
  <tr>
    <td><%= train.number %></td>
    <td><%= train.name %></td>
    <td><%= train.from %></td>
    <td><%= train.to %></td>
    <td><%= train.departure %></td>
    <td><%= train.arrival %></td>
    <td><%= train.carrier %></td>
    <td><%= link_to 'Show', train %></td>
    <td><%= link_to 'Edit', edit_train_path(train) %></td>
    <td><%= link_to 'Destroy', train, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Train', new_train_path , :class => 'button' %>
